{
  "tasks": [
    {
      "type": "cppbuild",
      "label": "C/C++: g++ build active file",
      "command": "/usr/bin/g++-13",
      "args": [
        // "-DBOOST_NO_CXX11_SCOPED_ENUMS",
        // "â€“lboost_chrono",
        "-lboost_regex",
        "-lboost_iostreams",
        "-lboost_program_options",
        "-lboost_filesystem",
        "-lboost_system",
        "-lboost_timer",
        "-lboost_thread",
        "-lboost_date_time",
        "-lboost_chrono",
        "-lboost_container",
        "-lboost_coroutine",
        "-lboost_random",
        "-lboost_serialization",
        "-lboost_wserialization",
        "-lboost_context",
        "-std=c++17",
        "-fdiagnostics-color=always",
        "--save-temps",
        "-dumpdir",
        "build/",
        "-g",
        "${file}",
        "-o",
        "${fileDirname}/build/${fileBasenameNoExtension}",
        // "-I/usr/include/boost",
        "-I${fileDirname}/vcpkg/installed/x64-linux/include",
        // "-D_FILE_OFFSET_BITS=64",
        "-pthread",
        "-L${fileDirname}/vcpkg/installed/x64-linux/lib",
        // "-L/usr/lib/x86_64-linux-gnu",
        // "-L/usr/local/lib/",
        // "-pthread",
        "-Wl,-rpath,L${fileDirname}/vcpkg/installed/x64-linux/lib"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Task generated by Debugger."
    }
  ],
  "version": "2.0.0"
}
